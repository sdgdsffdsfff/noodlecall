<?xml version="1.0" encoding="UTF-8"?>
<configuration>  

	<appender name="NOODLECALL-STANDARD-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">    
		<file>../logs/noodlecall/noodlecall-standard-logfile.log</file>    
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>INFO</level>
			<onMatch>ACCEPT</onMatch>      
			<onMismatch>DENY</onMismatch>    
		</filter>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
	      <level>INFO</level>
	  </filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">      
			<fileNamePattern>../logs/noodlecall/noodlecall-standard-logfile.log.%d{yyyyMMdd}</fileNamePattern>        
			<maxHistory>30</maxHistory>    
		</rollingPolicy>    
		<encoder charset="UTF-8">      
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n</pattern> 
		</encoder>  
	</appender>
	
	<appender name="NOODLECALL-DEBUG-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">    
		<file>../logs/noodlecall/noodlecall-debug-logfile.log</file>    
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>      
			<onMismatch>DENY</onMismatch>    
		</filter>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
	      <level>INFO</level>
	  </filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">      
			<fileNamePattern>../logs/noodlecall/noodlecall-debug-logfile.log.%d{yyyyMMdd}</fileNamePattern>        
			<maxHistory>30</maxHistory>    
		</rollingPolicy>    
		<encoder charset="UTF-8">      
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n</pattern> 
		</encoder>  
	</appender>
	
	<appender name="NOODLECALL-ERROR-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">    
		<file>../logs/noodlecall/noodlecall-error-logfile.log</file>    
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>      
			<onMismatch>DENY</onMismatch>    
		</filter>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
	      <level>INFO</level>
	  </filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">      
			<fileNamePattern>../logs/noodlecall/noodlecall-error-logfile.log.%d{yyyyMMdd}</fileNamePattern>        
			<maxHistory>30</maxHistory>    
		</rollingPolicy>    
		<encoder charset="UTF-8">      
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n</pattern> 
		</encoder>  
	</appender>

	<appender name="STDOUT-APPENDER" class="ch.qos.logback.core.ConsoleAppender">    
		<encoder charset="UTF-8">      
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{15} - %msg%n</pattern>    
		</encoder>  
		<target>System.out</target>  
	</appender>  
	<appender name="STDERR-APPENDER" class="ch.qos.logback.core.ConsoleAppender">    
		<encoder charset="UTF-8">      
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{15} - %msg%n</pattern>    
		</encoder>  
		<target>System.err</target>  
	</appender>
	
	<logger name="org.fl.noodlecall" level="DEBUG" additivity="false">    
		<appender-ref ref="NOODLECALL-STANDARD-APPENDER" /> 
		<appender-ref ref="NOODLECALL-DEBUG-APPENDER" /> 
		<appender-ref ref="NOODLECALL-ERROR-APPENDER" /> 
	</logger>
	
	<root level="DEBUG">    
		<appender-ref ref="NOODLECALL-STANDARD-APPENDER" /> 
		<appender-ref ref="NOODLECALL-DEBUG-APPENDER" /> 
		<appender-ref ref="NOODLECALL-ERROR-APPENDER" /> 
	</root>
	
</configuration>